<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_a7__video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.owl.Activity.A7_VideoActivity">

    <com.owl.Bebop.BebopVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:background="@color/white"
        android:layout_width="5dp"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/imageView"
        android:background="@drawable/white_arrow"
        android:layout_marginTop="30dp"
        android:layout_width="40dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_below="@+id/imageView"
        android:layout_marginStart="10dp"
        android:text="GuideView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/a7_photo"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_width="60dp"
        android:layout_height="40dp" />

    <Button
        android:background="@drawable/white_btn"
        android:text="Land"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_width="70dp"
        android:layout_height="40dp" />

</RelativeLayout>
